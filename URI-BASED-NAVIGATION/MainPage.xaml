<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="URI_BASED_NAVIGATION.MainPage"
             Title="Sign Up">
    <VerticalStackLayout Padding="20">
        <Label Text="Sign Up" FontSize="24" HorizontalOptions="Center"/>

        <Entry x:Name="usernameEntry" Placeholder="Username"/>
        <Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email"/>
        <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True"/>
        <Entry x:Name="confirmPasswordEntry" Placeholder="Confirm Password" IsPassword="True"/>

        <Label x:Name="errorLabel" TextColor="Red" IsVisible="False"/>

        <Button Text="Sign Up" Clicked="OnSignupClicked"/>
    </VerticalStackLayout>
</ContentPage>
